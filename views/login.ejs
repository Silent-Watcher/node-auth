<div class="px-4 py-5 my-5 text-center">
    <h1 class="display-5 fw-bold">Login Here</h1>
    <p class="display-6 fw-bold mt-3 text-danger">
        <%= messages?.error?? ""%>
    </p>
    <div class="col-lg-3 mx-auto">
        <form action="auth/login" method="POST">
            <div class="mb-2">
                <label for="username" class="form-label">Username</label>
                <input type="text" class="form-control" name="username" placeholder="Username" required>
            </div>
            <div class="mb-2">
                <label for="password" class="form-label">Password</label>
                <input type="password" class="form-control" name="password" placeholder="Password" required>
            </div>
            <button type="submit" class="btn btn-primary mt-2">Signing</button>
            <a href="/register" class="btn btn-secondary mt-2">Signup</a>
            <a href="/" class="btn btn-success mt-2">Home</a>
        </form>
    </div>
</div>